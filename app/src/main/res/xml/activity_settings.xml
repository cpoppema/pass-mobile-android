<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:title="@string/pref_group_title_server"
        android:key="pref_key_server_settings">

        <EditTextPreference
            android:id="@+id/pref_key_server"
            android:key="pref_key_server"
            android:dialogTitle="@string/pref_dialog_title_server"
            android:title="@string/pref_title_server"
            android:inputType="textNoSuggestions" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_group_title_key"
        android:key="pref_key_keypair_settings">

        <Preference
            android:key="pref_key_key_name"
            android:title="@string/pref_title_key_name" />

        <Preference
            android:id="@+id/pref_key_public_key"
            android:key="pref_key_public_key_id"
            android:title="@string/pref_title_public_key"
            android:enabled="false"
            android:summary="@string/pref_summary_public_key"/>
    </PreferenceCategory>
</PreferenceScreen>