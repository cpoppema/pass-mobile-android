<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Preference title text color -->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!-- Button background color -->
        <item name="android:colorButtonNormal">@color/primary</item>

        <!-- Input without focus hint color -->
        <item name="android:textColorHint">@color/secondary_text</item>

        <!-- Input border bottom color -->
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Button text color -->
        <item name="android:textColorTertiary">@android:color/white</item>

        <!-- Input with focus label, cursor and border bottom color -->
        <!-- Android 6: this is also the color of Dialog buttons -->
        <item name="colorAccent">@color/accent</item>

        <!-- App bar background color -->
        <item name="colorPrimary">@color/primary</item>

        <!-- Status bar background color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SecretImageViewIcon">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppTheme.SecretTextViewIcon">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="AppTheme.SecretTextViewDomain">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SecretTextViewUsername">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.SecretTextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ProgressDialogTextView"  parent="Theme.AppCompat.Light.Dialog">
        <!-- Progress message color -->
        <item name="android:textColor">@color/primary_text</item>

        <!-- Progress spinner color -->
        <item name="colorControlActivated">@color/accent</item>
    </style>
</resources>
